<h1>Find a Game</h1>

{{#if error }}
	{{#if code}}
		<form action= "/search/result" method = "GET">
			<body>
				<h2>Write the name of the game you want to search right below </h2>
				<p><label >Name: <errorAsterisk>*</errorAsterisk></label></p>
				<input type="text" id='errorCheck' name="name" size = "36">
				<input type="submit" value="Search">
			</body>
		</form>
		<errorOnSearch><strong>{{!--  ERROR {{code}}:  --}}{{error}}</strong></errorOnSearch>
	{{/if}}
{{else}}
	<form action= "/search/result" method = "GET">
		<body>
			<h2>Write the name of the game you want to search right below </h2>
			<p><label >Name:</label></p>
			<input type="text"  name="name" size = "36">
			<input type="submit" value="Search">
		</body>
	</form>
{{/if}}

