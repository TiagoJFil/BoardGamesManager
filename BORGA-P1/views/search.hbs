<h1>Find a Game</h1>

<form action= "/search/result" method = "GET">
	<body>
		<h2>Write the name of the game you want to search right below </h2>

		<p><label >Name: 
			{{#if error}}<errorAsterisk>*</errorAsterisk>{{/if}}
			</label></p>

		<input type="text" {{#if error}}id='errorCheck'{{/if}}name="name" size = "36">
		<input type="submit" value="Search">
	</body>
</form>

{{#if error}}
	{{#if code}}
		<errorOnSearch><strong> ERROR {{code}}: {{error}}</strong></errorOnSearch>
	{{/if}}
{{/if}}

