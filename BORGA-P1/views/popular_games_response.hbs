<h1>{{header}}</h1>

{{#if games}}
    <p>Here are the most popular games according to board game atlas website:</p>
    
    {{#each games}}
        <table>
            <tr>
                <td>Title:</td>
                <td>{{name}}    
                    <action= "/groups" method = "GET">
                        <input type="submit" value="Add to group">  	
                </td>
            </tr>	
            <tr>
                <td>Price:</td>
                <td>{{price}}$</td>
            </tr>	
            <tr>
                <td>Url:</td>
                <td><a href={{url}}>{{url}}</a></td>
            </tr>
            <tr></tr>
        </table>	
        
    {{/each}}
    
{{/if}}

{{#if error}}
	{{#if code}}
		<error><strong> ERROR {{code}}: {{error}}</strong></error>
	{{/if}}
{{/if}}