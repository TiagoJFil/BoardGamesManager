<h1><span id ='group_name'>{{groupdetails.name}}</span></h1>

<td>
    <div style="width: 500px; height: 150px; border: 5px solid #000;">
        <element class='gameURL'>DESCRIPTION</element> :<br><span id='group_desc'>{{groupdetails.description}}</span>

        <span id='enable_edit_button'>
            <input class = "button_group_edit" id = 'but_edit_{{id}}_{{token}}' type = "submit" value = "Edit">
        </span>
         <span id ='new_form'></span>
    </div>
   
</td>

{{#if games}}
    {{#each games}}
        <ul class = 'games' id = 'entry_{{id}}'>
            <div style="width: 500px; height: 125px; border: 5px solid #000;">
                <table>
                    <tr>
                        <td >
                            <element class='gameURL'>NAME</element> : {{name}} <element class='gameURL'>PUBLISHER</element> : {{publisher}}</br>
                            <element class='gameURL'>MIN_PLAYERS</element> : {{min_players}} <element class='gameURL'>MAX_PLAYERS</element> : {{min_players}}<br>
                            <element class='gameURL'>MIN_AGE</element> : {{min_age}}<br>
                            <element class='gameURL'>PRICE</element> : {{price}}$<br>
                            <element class='gameURL'>URL</element> : <a href={{url}} target="_blank" rel="noopener noreferrer">{{url}}</a>
                        </td>
                        <td>
                            
                            <input class = "button_game_delete" id="but_del_{{../id}}_{{id}}_{{../token}}" type = "submit" value = "Delete">
                            
                        </td>
                    </tr>
                </table>
            </div>
        </ul>
    {{/each}}
{{/if}}
{{#if games}}
<script src="/public/client.js"></script>
<script>
	prepareGameDeleteButtons();
</script>
{{/if}}
{{#if groupdetails.description}}
    <script src="/public/client.js"></script>
    <script>
        prepareGroupEditButton();
    </script>
{{/if}}